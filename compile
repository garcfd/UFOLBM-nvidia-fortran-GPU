export NVHPC_CUDA_HOME="/usr/local/cuda-12.1"
pgf77 -static-nvidia -acc=host      -o lbm-basic lbm-08.for
pgf77 -static-nvidia -acc=multicore -o lbm-multi lbm-08.for
pgf77 -static-nvidia -acc -gpu=cc75 -o lbm-tesla lbm-08.for # Tesla T4

