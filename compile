pgf90 -static-nvidia -m64 -acc=host      -o ufolbm-basic ufolbm-32.for
pgf90 -static-nvidia -m64 -acc=multicore -o ufolbm-multi ufolbm-32.for
pgf90 -static-nvidia -m64 -acc -gpu=cc75 -o ufolbm-tesla ufolbm-32.for # Nvidia Tesla T4
pgf90 -static-nvidia -m64 -acc -gpu=cc86 -o ufolbm-tesla ufolbm-32.for # Nvidia A10
gfortran -Wall -fcheck=all -fbounds-check -pedantic -fbacktrace -o ufolbm-gfort ufolbm-32.for
